{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vue 3 Vite Application Configuration",
  "description": "Configuration file for generating Vue 3 Vite applications. Users can fill this out instead of answering prompts in the terminal.",
  "type": "object",
  "properties": {
    "application_name": {
      "type": "string",
      "description": "The name of your application in kebab-case (e.g., 'omni-inventory-manager-web')",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "examples": ["omni-inventory-manager-web", "my-awesome-app"]
    },
    "project_scope": {
      "type": "string",
      "description": "Your NPM scope/organization (e.g., '@pdl-fulfillment-omni')",
      "pattern": "^@[a-z0-9-]+$",
      "examples": ["@pdl-fulfillment-omni", "@myorg"]
    },
    "router_base_path": {
      "type": "string",
      "description": "Base path for the Vue Router (e.g., '/omni-inventory-manager')",
      "pattern": "^/[a-z0-9-/]*$",
      "examples": ["/omni-inventory-manager", "/app", "/"]
    },
    "api_base_path": {
      "type": "string",
      "description": "Base API path for backend service proxying (e.g., '/omni-access-manager', '/api')",
      "pattern": "^/[a-z0-9-/]*$",
      "examples": ["/omni-access-manager", "/api", "/backend"]
    },
    "default_port": {
      "type": "integer",
      "description": "Port for the development server (e.g., 8089)",
      "minimum": 1024,
      "maximum": 65535,
      "examples": [8089, 3000, 8080]
    },
    "application_type": {
      "type": "string",
      "description": "Type of application: micro-frontend (single-spa with SystemJS) or standalone (traditional SPA with ES modules)",
      "enum": ["micro-frontend", "standalone"],
      "examples": ["micro-frontend", "standalone"],
      "default": "micro-frontend"
    },
    "test_framework": {
      "type": "string",
      "description": "Testing framework to use",
      "enum": ["jest", "vitest"],
      "examples": ["jest", "vitest"],
      "default": "jest"
    },
    "state_management": {
      "type": "string",
      "description": "State management library to use",
      "enum": ["vuex", "pinia"],
      "examples": ["vuex", "pinia"],
      "default": "vuex"
    },
    "github_token": {
      "type": "string",
      "description": "GitHub Personal Access Token for accessing @RoyalAholdDelhaize packages (optional, will be prompted if not provided)",
      "minLength": 40,
      "examples": ["ghp_1234567890abcdefghijklmnopqrstuvwxyz1234"]
    },
    "node_version": {
      "type": "string",
      "description": "Node.js version to use",
      "pattern": "^v?[0-9]+\\.[0-9]+\\.[0-9]+$",
      "default": "v22.16.0",
      "examples": ["v22.16.0", "22.16.0"]
    },
    "vue_version": {
      "type": "string",
      "description": "Vue version to use",
      "pattern": "^\\^?[0-9]+\\.[0-9]+\\.[0-9]+$",
      "default": "^3.5.13",
      "examples": ["^3.5.13", "3.5.13"]
    },
    "vite_version": {
      "type": "string",
      "description": "Vite version to use",
      "pattern": "^\\^?[0-9]+\\.[0-9]+\\.[0-9]+$",
      "default": "^6.3.5",
      "examples": ["^6.3.5", "6.3.5"]
    },
    "typescript_version": {
      "type": "string",
      "description": "TypeScript version to use",
      "pattern": "^\\^?[0-9]+\\.[0-9]+$",
      "default": "^5.7.3",
      "examples": ["^5.7.3", "5.7.3"]
    },
    "enable_single_spa": {
      "type": "boolean",
      "description": "Enable single-spa micro frontend integration. Note: Should be false for standalone applications.",
      "default": true
    },
    "enable_datadog": {
      "type": "boolean",
      "description": "Enable Datadog RUM monitoring",
      "default": true
    },
    "component_library": {
      "type": "string",
      "description": "Component library to use (leave empty to skip)",
      "default": "@royalaholddelhaize/pdl-spectrum-component-library-web",
      "examples": ["@royalaholddelhaize/pdl-spectrum-component-library-web", "@myorg/component-library", ""]
    },
    "component_library_version": {
      "type": "string",
      "description": "Version of the component library",
      "default": "^1.0.3",
      "examples": ["^1.0.3", "1.2.0"]
    }
  },
  "required": [
    "application_name",
    "project_scope",
    "router_base_path",
    "api_base_path",
    "default_port",
    "application_type",
    "test_framework",
    "state_management"
  ],
  "additionalProperties": false
}
