{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Starter Configuration",
  "description": "Configuration schema for @app-starter agent to generate Vue 3 Vite applications",
  "type": "object",
  "required": [
    "application_name",
    "project_scope",
    "router_base_path",
    "api_base_path",
    "default_port",
    "application_type",
    "include_component_library",
    "vue_api_pattern",
    "state_management",
    "test_framework",
    "use_latest_versions"
  ],
  "properties": {
    "application_name": {
      "type": "string",
      "description": "Application name in kebab-case",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "examples": ["omni-inventory-manager-web", "my-app-name"]
    },
    "project_scope": {
      "type": "string",
      "description": "NPM scope/organization",
      "pattern": "^@[a-z0-9-]+$",
      "examples": ["@royalaholddelhaize", "@my-organization"]
    },
    "router_base_path": {
      "type": "string",
      "description": "Base path for Vue Router (must start and end with /)",
      "pattern": "^/.*/$",
      "examples": ["/omni-inventory-manager/", "/my-app/", "/"]
    },
    "api_base_path": {
      "type": "string",
      "description": "Base API path for backend proxying",
      "pattern": "^/.*",
      "examples": ["/api/inventory", "/api/my-service"]
    },
    "default_port": {
      "type": "integer",
      "description": "Development server port",
      "minimum": 1024,
      "maximum": 65535,
      "examples": [3000, 8080, 5173]
    },
    "application_type": {
      "type": "string",
      "description": "Application architecture type",
      "enum": ["micro-frontend", "standalone"],
      "examples": ["micro-frontend", "standalone"]
    },
    "include_component_library": {
      "type": "string",
      "description": "Include component library (requires GitHub token)",
      "enum": ["yes", "no"],
      "examples": ["yes", "no"]
    },
    "vue_api_pattern": {
      "type": "string",
      "description": "Vue API style preference",
      "enum": ["composition-api", "options-api"],
      "examples": ["composition-api", "options-api"]
    },
    "state_management": {
      "type": "string",
      "description": "State management library",
      "enum": ["pinia", "vuex"],
      "examples": ["pinia", "vuex"]
    },
    "test_framework": {
      "type": "string",
      "description": "Testing framework",
      "enum": ["vitest", "jest"],
      "examples": ["vitest", "jest"]
    },
    "use_latest_versions": {
      "type": "string",
      "description": "Fetch latest package versions from npm or use pinned versions",
      "enum": ["yes", "no"],
      "examples": ["yes", "no"]
    }
  },
  "patternProperties": {
    "^_": {
      "description": "Properties starting with underscore are allowed for comments and help text"
    }
  },
  "additionalProperties": false
}
